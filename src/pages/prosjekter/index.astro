---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Base.astro';
import HeroSection from '@/components/HeroSection.astro';

const projects = await getCollection('projects');
---

<Layout title="Prosjekter" description="Ting vi har jobbet på">
  <HeroSection
    title="Prosjekter"
    preamble="Her er en samling av prosjekter og erfaringer vi har med oss inn i Kynd, eller som vi jobbet med for Kynds – våre – kunder."
  />
  <div class="project-grid">
    {
      projects.map((project) => (
        <div class="project-card">
          <a href={`/prosjekter/${project.id}`}>{project.data.title}</a>
          <div class="logo-container">
            <img
              class="client-logo"
              src={project.data.fullLogo?.src || project.data.image.src}
              alt={project.data.title}
            />
            {project.data.kyndLogo && (
              <img
                class="kynd-logo"
                src={project.data.kyndLogo.src}
                alt={`${project.data.title} - Kynd`}
              />
            )}
          </div>
        </div>
      ))
    }
  </div>
</Layout>

<style>
  .project-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    column-gap: 2rem;
    row-gap: 2rem;

    @media (--md) {
      grid-template-columns: repeat(5, 1fr);
      row-gap: 4rem;
    }
  }

  .project-card {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: start;
    gap: 1rem;

    @media (--md) {
      grid-column: span 2;
    }

    .logo-container {
      position: relative;
      width: 100%;
      height: 100%;
      border: 2px solid var(--color-text);
      padding: 2rem;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .client-logo,
    .kynd-logo {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }

    .kynd-logo {
      position: absolute;
      top: 2rem;
      left: 2rem;
      width: calc(100% - 4rem);
      height: calc(100% - 4rem);
      opacity: 0;
    }

    &:hover {
      .logo-container {
        box-shadow: var(--shadow);
      }

      .client-logo {
        opacity: 0;
      }

      .kynd-logo {
        opacity: 1;
      }
    }
  }

  .project-card:nth-child(4n - 3),
  .project-card:nth-child(4n) {
    img {
      max-height: 28rem;
    }

    @media (--md) {
      grid-column: span 3;
      img {
        height: 28rem;
      }
    }
  }

  .project-card a {
    font-size: var(--fs-heading-m);
    background-color: var(--color-accent);
    padding: 0.5rem;
    overflow-wrap: anywhere;
  }

  .project-card a::before {
    content: '';
    position: absolute;
    inset: 0;
    z-index: 1;
    cursor: pointer;
  }
</style>
