---
import ApproachSection from '@/components/ApproachSection.astro';
import ClientLogoStrip from '@/components/ClientLogoStrip.astro';
import ContactCTA from '@/components/ContactCTA.astro';
import HeroSection from '@/components/HeroSection.astro';
import PageSection from '@/components/PageSection.astro';
import ProblemSection from '@/components/ProblemSection.astro';
import Layout from '@/layouts/Base.astro';
import { getProjectsWithDuration } from '@/utils/projectHelpers';

const projects = await getProjectsWithDuration();
---

<Layout
  title="Senior teknologer som tar produktansvar"
  description="Kynd hjelper produktselskaper med senior teknologikompetanse, tydelige prioriteringer og eierskap til resultat."
  image="/patterns/pattern-0.svg"
>
  <HeroSection
    title="Senior teknologer som tar produktansvar."
    preamble="Vi bygger produkter sammen med team som vil skape effekt, ikke bare levere backlog."
    link={{ label: 'Ta en uforpliktende prat', href: '/kontakt' }}
    image="/patterns/pattern-0.svg"
  />
  <PageSection
    heading="Typiske utfordringer"
    subheading="Vi går ofte inn når et produktteam trenger tydeligere retning, hardere prioritering og bedre beslutninger."
  >
    <ProblemSection />
  </PageSection>
  <PageSection
    heading="Hvordan vi jobber"
    subheading="Vi utfordrer før vi implementerer, og tar ansvar for konsekvensene av valgene vi gjør."
  >
    <ApproachSection />
  </PageSection>
  <PageSection heading="Utvalgte samarbeid" subheading="Et utvalg prosjekter vi har jobbet med.">
    <ClientLogoStrip projects={projects} />
  </PageSection>
  <ContactCTA />
</Layout>
