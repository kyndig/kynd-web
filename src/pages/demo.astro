---
import Base from '@/layouts/Base.astro';
import DynamicCard from '@/components/DynamicCard.astro';
---

<Base title="DynamicCard Component Demo">
  <main class="demo-container">
    <header class="demo-header">
      <h1>DynamicCard Component Demo</h1>
      <p>Quality checking all three variants of the DynamicCard component</p>
    </header>

    <section class="demo-section">
      <h2>All DynamicCard Variants</h2>
      <p>Hover over the cards to see them expand with additional information!</p>
      <div class="dynamic-grid">
        <DynamicCard
          variant="default"
          heading="Default DynamicCard"
          description="This is the default variant of the DynamicCard component. It features a light gray background with green accent highlights and uses pattern-2.svg for the background decoration."
          href="/default"
        />
        <DynamicCard
          variant="green"
          heading="Green DynamicCard"
          description="This is the green variant of the DynamicCard component. It features a bright green background with white text and uses pattern-1.svg for the background decoration."
          href="/green"
        />
        <DynamicCard
          variant="black"
          heading="Black DynamicCard"
          description="This is the black variant of the DynamicCard component. It features a dark blue background with white text and uses pattern-1.svg for the background decoration."
          href="/black"
        />
        <DynamicCard
          variant="default"
          heading="Future Project"
          description="An experimental project exploring the intersection of AI and user experience design. This innovative tool helps designers create more accessible and inclusive interfaces through automated testing and optimization."
          href="/future-project"
        />
      </div>
    </section>

    <section class="demo-section">
      <h2>Without Description</h2>
      <div class="dynamic-grid">
        <DynamicCard
          variant="green"
          heading="DynamicCard Without Description"
          href="/no-description"
        />
        <DynamicCard variant="black" heading="Another Minimal Card" href="/minimal" />
      </div>
    </section>

    <section class="demo-section">
      <h2>Without Link</h2>
      <div class="dynamic-grid">
        <DynamicCard
          variant="default"
          heading="DynamicCard Without Link"
          description="This DynamicCard demonstrates the component without a link, showing how the layout adapts when no href is provided."
        />
        <DynamicCard
          variant="green"
          heading="Another Non-Link Card"
          description="This card also has no link, demonstrating the component's flexibility."
        />
      </div>
    </section>
  </main>
</Base>

<style>
  .demo-container {
    max-width: var(--content-max-width);
    margin: 0 auto;
    padding: var(--content-padding);
  }

  .demo-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .demo-header h1 {
    font-size: var(--fs-heading-l);
    font-weight: var(--font-weight-semibold);
    margin: 0 0 1rem 0;
    color: var(--color-primary);
  }

  .demo-header p {
    font-size: var(--fs-body-l);
    color: var(--color-gray);
    margin: 0;
  }

  .demo-section {
    margin-bottom: 4rem;
  }

  .demo-section h2 {
    font-size: var(--fs-heading-m);
    font-weight: var(--font-weight-medium);
    margin: 0 0 1rem 0;
    color: var(--color-primary);
  }

  .demo-section p {
    font-size: var(--fs-body-m);
    color: var(--color-gray);
    margin: 0 0 3rem 0;
    text-align: center;
  }

  .dynamic-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    max-width: 80rem;
    margin: 0 auto;
  }

  .demo-section:last-child {
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .dynamic-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }

  @media (min-width: 1200px) {
    .dynamic-grid {
      gap: 3rem;
    }
  }
</style>
