---
type Props = {
  title: string;
  description: string;
  outcome: string;
};

const { title, description, outcome } = Astro.props;
---

<article class="service-card">
  <h3>{title}</h3>
  <p>{description}</p>
  <p class="outcome"><strong>Typisk resultat:</strong> {outcome}</p>
</article>

<style>
  .service-card {
    border: 2px solid var(--color-primary);
    background: var(--color-secondary-shade);
    padding: 1.5rem;
    box-shadow: 0 0.25rem 0 0 var(--color-shadow);
    display: grid;
    gap: 0.75rem;
  }

  .service-card h3 {
    font-size: var(--fs-heading-xs);
    background-color: var(--color-accent);
    width: fit-content;
    padding: 0.25rem 0.5rem;
  }

  .service-card p {
    font-size: var(--fs-body-m);
  }

  .service-card .outcome {
    font-size: var(--fs-body-s);
  }
</style>
