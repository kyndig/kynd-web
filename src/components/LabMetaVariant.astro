---
import StarIcon from '@/icons/StarIcon.astro';
import ForkIcon from '@/icons/ForkIcon.astro';
import LabBadges from './LabBadges.astro';

export type Props = {
  stargazersCount: number;
  forksCount: number;
  isPrivate?: boolean;
  status: string;
  category?: string;
  variant?: 'default' | 'green' | 'black';
};

const {
  stargazersCount,
  forksCount,
  isPrivate,
  status,
  category,
  variant = 'default',
} = Astro.props;
---

<div class="lab-meta">
  <div class="lab-stats">
    <span class="stat">
      <StarIcon class="stat-icon" />
      {stargazersCount}
    </span>
    <span class="stat">
      <ForkIcon class="stat-icon" />
      {forksCount}
    </span>
  </div>
  <LabBadges isPrivate={isPrivate} status={status} category={category} variant={variant} />
</div>

<style>
  .lab-meta {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .lab-stats {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .stat {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: var(--fs-body-s);
    color: var(--color-gray);
  }

  .stat-icon {
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .lab-stats {
      justify-content: center;
    }
  }
</style>
