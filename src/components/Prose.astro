---
export type Props = {
  align?: 'left' | 'right' | 'center';
  wide?: boolean;
};

const { align = 'left', wide = false } = Astro.props;

const leftMargin = align === 'left' ? '0' : 'auto';
const rightMargin = align === 'right' ? '0' : 'auto';
---

<div data-wide={wide}>
  <slot />
</div>

<style define:vars={{ leftMargin, rightMargin }}>
  div {
    font-size: var(--fs-body-l);
    font-weight: var(--font-weight-normal);
    margin-inline-start: var(--leftMargin);
    margin-inline-end: var(--rightMargin);

    @media (--md) {
      max-width: min(65ch, 60%);
    }

    &[data-wide='true'] {
      @media (--md) {
        max-width: none;
      }
    }

    & :global(p:not(:last-child)) {
      margin-block-end: 1em;
    }

    & :global(h3) {
      font-weight: bold;
      margin-block-end: 0.75em;
    }

    & :global(h4) {
      font-weight: bold;
      margin-block-end: 0.75em;
    }

    /* Inline code styling */
    & :global(code) {
      font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', 'Courier New', monospace;
      font-size: 0.8em;
      background-color: var(--color-light-gray);
      padding: 0.125em 0.25em;
      border-radius: 0.25em;
      color: var(--color-primary);
    }

    & :global(ul),
    & :global(ol) {
      list-style: revert;
      padding-inline-start: 1em;
    }

    & :global(li) {
      margin-block: 0.5em;
    }

    /* External link styling */
    & :global(a[href^='http']) {
      color: var(--color-text);
      text-decoration: underline;
      text-decoration-color: var(--color-gray);
      text-underline-offset: 0.2em;
      text-decoration-thickness: 0.1em;
      transition: all var(--animation-duration) ease;
      position: relative;
    }

    & :global(a[href^='http']:hover) {
      color: var(--color-primary);
      text-decoration-color: var(--color-primary);
      text-decoration-thickness: 0.15em;
    }

    & :global(a[href^='http']:focus-visible) {
      outline: 0.125rem solid var(--color-focus);
      outline-offset: 0.125rem;
      border-radius: 0.125rem;
    }

    /* External link icon */
    & :global(a[href^='http']::after) {
      content: 'â†—';
      font-size: 0.8em;
      margin-inline-start: 0.25em;
      opacity: 0.7;
      transition: opacity var(--animation-duration) ease;
    }

    & :global(a[href^='http']:hover::after) {
      opacity: 1;
    }

    /* Internal links (anchor links) */
    & :global(a[href^='#']) {
      color: var(--color-text);
      text-decoration: underline;
      text-decoration-color: var(--color-gray);
      text-underline-offset: 0.2em;
      text-decoration-thickness: 0.1em;
      transition: all var(--animation-duration) ease;
    }

    & :global(a[href^='#']:hover) {
      color: var(--color-accent);
      text-decoration-color: var(--color-accent);
    }
  }
</style>
