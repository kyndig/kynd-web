---
import Link from '@/components/Link.astro';
import { Icon } from 'astro-icon/components';
import type { DetectedTechnologies } from '@/utils/githubTechnologyDetection';

export type Props = {
  contributors: {
    login: string;
    avatarUrl: string;
    contributions: number;
  }[];
  stargazersCount: number;
  forksCount: number;
  technologies: DetectedTechnologies;
  isPrivate?: boolean;
  status?: string;
  category?: string;
  variant?: 'default' | 'green' | 'black';
  showBadges?: boolean;
};

const {
  contributors,
  stargazersCount,
  forksCount,
  technologies,
  isPrivate,
  status,
  category,
  variant = 'default',
  showBadges = true,
} = Astro.props;
---

<div class="lab-metadata">
  <!-- Stats Section -->
  <div class="stats-section">
    <div class="stat">
      <span class="stat-number">{stargazersCount}</span>
      <span class="stat-label">Stars</span>
    </div>
    <div class="stat">
      <span class="stat-number">{forksCount}</span>
      <span class="stat-label">Forks</span>
    </div>
    <div class="stat">
      <span class="stat-number">{contributors.length}</span>
      <span class="stat-label">Contributors</span>
    </div>
  </div>

  <!-- Badges Section -->
  {
    showBadges && (
      <div class="badges-section">
        <div class:list={['lab-badges', variant]}>
          {isPrivate && <span class="badge private">Private</span>}
          {status && <span class:list={['badge', `badge-${status}`]}>{status}</span>}
          {category && <span class="badge category">{category}</span>}
        </div>
      </div>
    )
  }

  <!-- Technologies Section -->
  <div class="technologies-section">
    <h3 class="section-heading">Technologies</h3>
    <div class="technologies-grid">
      {
        technologies.frameworks.map((tech) => (
          <div class="tech-badge framework" style={`--tech-color: ${tech.color}`}>
            <Icon name={tech.icon} class="tech-icon" />
            <span class="tech-name">{tech.name}</span>
          </div>
        ))
      }
      {
        technologies.languages.map((tech) => (
          <div class="tech-badge language" style={`--tech-color: ${tech.color}`}>
            <Icon name={tech.icon} class="tech-icon" />
            <span class="tech-name">{tech.name}</span>
          </div>
        ))
      }
      {
        technologies.tools.map((tech) => (
          <div class="tech-badge tool" style={`--tech-color: ${tech.color}`}>
            <Icon name={tech.icon} class="tech-icon" />
            <span class="tech-name">{tech.name}</span>
          </div>
        ))
      }
    </div>
  </div>

  <!-- Contributors Section -->
  <div class="contributors-section">
    <h3 class="section-heading">Contributors</h3>
    {
      contributors && contributors.length > 0 && (
        <div class="contributors-grid">
          {contributors.map((contributor) => (
            <div class="contributor-card">
              <div class="contributor-main">
                <img
                  src={contributor.avatarUrl}
                  alt={`${contributor.login}'s avatar`}
                  class="contributor-avatar"
                />
                <div class="contributor-info">
                  <span class="contributor-name">@{contributor.login}</span>
                  <span class="contributor-contributions">
                    {contributor.contributions} contributions
                  </span>
                </div>
              </div>
              <Link
                href={`https://github.com/${contributor.login}`}
                target="_blank"
                rel="noopener noreferrer"
                variant="dark-primary"
                text="Github"
                linkOverlay
                showBackground={false}
                iconPosition="right"
                aria-label={`View ${contributor.login}'s GitHub profile`}
              />
            </div>
          ))}
        </div>
      )
    }
  </div>
</div>

<style>
  .lab-metadata {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  /* Stats Section */
  .stats-section {
    display: flex;
    gap: 2rem;
    justify-content: left;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .stat-number {
    font-size: var(--fs-heading-m);
    font-weight: var(--font-weight-bold);
    color: var(--color-accent);
    line-height: 1;
  }

  .stat-label {
    font-size: var(--fs-body-s);
    color: var(--color-gray);
    margin-top: 0.25rem;
  }

  /* Technologies Section */
  .technologies-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .section-heading {
    font-size: var(--fs-heading-s);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
    margin: 0;
  }

  .technologies-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .tech-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 1rem;
    font-size: var(--fs-body-s);
    font-weight: var(--font-weight-medium);
    border: 2px solid var(--tech-color);
    background-color: var(--background-color);
    color: var(--tech-color);
  }

  .tech-icon {
    font-size: 1rem;
  }

  .tech-name {
    white-space: nowrap;
  }

  /* Contributors Section */
  .contributors-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contributors-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
  }

  .contributor-card {
    position: relative;
    background-color: var(--background-color);
    padding: 2rem;
    box-shadow: 0 0.25rem 0 0 var(--color-shadow);
    border: 2px solid var(--color-dark-blue);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    &:hover {
      box-shadow: var(--shadow);
    }
  }

  .contributor-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
  }

  .contributor-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    object-fit: cover;
  }

  .contributor-main {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex: 1;
    z-index: 1;
    position: relative;
  }

  .contributor-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .contributor-name {
    font-weight: var(--font-weight-semibold);
    color: var(--color-text);
  }

  .contributor-contributions {
    font-size: var(--fs-body-s);
    color: var(--color-gray);
  }

  /* Badges Section */
  .badges-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .lab-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .badge {
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: var(--fs-body-xs);
    font-weight: var(--font-weight-medium);
    text-transform: capitalize;
  }

  .badge.private {
    background-color: var(--color-gray);
    color: var(--color-secondary);
  }

  .badge.badge-active {
    background-color: var(--color-red);
    color: var(--color-secondary);
  }

  .badge.badge-completed {
    background-color: #22c55e;
    color: var(--color-secondary);
  }

  .badge.badge-experimental {
    background-color: #f59e0b;
    color: var(--color-secondary);
  }

  /* Variant-specific styling */
  .lab-badges.default {
    --highlight-color: var(--color-accent);
    --description-text-color: var(--color-text);
  }

  .lab-badges.green {
    --highlight-color: var(--color-secondary);
    --description-text-color: var(--color-text);
  }

  .lab-badges.black {
    --highlight-color: var(--color-secondary);
    --description-text-color: var(--color-primary);
  }

  .badge.category {
    background-color: var(--highlight-color);
  }

  /* Variant-specific text color for category badges */
  .lab-badges.default .badge.category {
    color: var(--description-text-color);
  }

  .lab-badges.green .badge.category {
    color: var(--description-text-color);
  }

  .lab-badges.black .badge.category {
    color: var(--color-black);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .stats-section {
      gap: 1rem;
    }

    .contributors-grid {
      grid-template-columns: 1fr;
    }

    .lab-badges {
      justify-content: center;
    }
  }
</style>
