---
import LabStats from './LabStats.astro';
import LabBadges from './LabBadges.astro';

export type Props = {
  stargazersCount: number;
  forksCount: number;
  isPrivate?: boolean;
  status: string;
  category?: string;
};

const { stargazersCount, forksCount, isPrivate, status, category } = Astro.props;
---

<div class="lab-meta">
  <LabStats stargazersCount={stargazersCount} forksCount={forksCount} />
  <LabBadges isPrivate={isPrivate} status={status} category={category} />
</div>

<style>
  .lab-meta {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 0 1rem;
  }
</style>
